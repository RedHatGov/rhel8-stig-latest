<def-group>

  

  <definition class="compliance" id="service_quota_nld_disabled" version="1">
    <metadata>
      <title>Service quota_nld Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The quota_nld service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package quota-nld removed or service quota_nld is not configured to start" operator="OR">
      <criterion comment="quota-nld removed" test_ref="test_service_quota_nld_package_quota-nld_removed" />
      <criteria operator="AND" comment="service quota_nld is not configured to start">
        <criterion comment="quota_nld is not running" test_ref="test_service_not_running_quota_nld" />
        <criterion comment="Property LoadState of service quota_nld is masked" test_ref="test_service_loadstate_is_masked_quota_nld" />
        <criterion comment="Property FragmentPath of service quota_nld is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_quota_nld" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_quota_nld_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_quota_nld_disabled" />
    <linux:state state_ref="state_systemd_quota_nld_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_quota_nld_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_quota_nld_off" comment="quota_nld service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">quota_nld.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_quota_nld_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_quota_nld_socket_disabled" />
    <linux:state state_ref="state_systemd_quota_nld_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_quota_nld_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_quota_nld_socket_off" comment="quota_nld socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">quota_nld.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_quota_nld" check="all" check_existence="any_exist" comment="Test that the quota_nld service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_quota_nld"/>
    <linux:state state_ref="state_service_not_running_quota_nld"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_quota_nld" comment="Retrieve the ActiveState property of quota_nld" version="1">
    <linux:unit operation="pattern match">^quota_nld\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_quota_nld" version="1" comment="quota_nld is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_quota_nld" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service quota_nld is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_quota_nld"/>
    <linux:state state_ref="state_service_loadstate_is_masked_quota_nld"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_quota_nld" comment="Retrieve the LoadState property of quota_nld" version="1">
    <linux:unit operation="pattern match">^quota_nld\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_quota_nld" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_quota_nld" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service quota_nld is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_quota_nld"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_quota_nld"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_quota_nld" comment="Retrieve the FragmentPath property of quota_nld" version="1">
    <linux:unit operation="pattern match">^quota_nld\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_quota_nld" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_quota_nld_package_quota-nld_removed" version="1"
  comment="package quota-nld is removed">
    <linux:object object_ref="obj_test_service_quota_nld_package_quota-nld_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_quota_nld_package_quota-nld_removed" version="1">
    <linux:name>quota-nld</linux:name>
  </linux:rpminfo_object>


</def-group>