<def-group>

  

  <definition class="compliance" id="service_rlogin_disabled" version="1">
    <metadata>
      <title>Service rlogin Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The rlogin service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package rsh-server removed or service rlogin is not configured to start" operator="OR">
      <criterion comment="rsh-server removed" test_ref="test_service_rlogin_package_rsh-server_removed" />
      <criteria operator="AND" comment="service rlogin is not configured to start">
        <criterion comment="rlogin is not running" test_ref="test_service_not_running_rlogin" />
        <criterion comment="Property LoadState of service rlogin is masked" test_ref="test_service_loadstate_is_masked_rlogin" />
        <criterion comment="Property FragmentPath of service rlogin is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_rlogin" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_rlogin_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_rlogin_disabled" />
    <linux:state state_ref="state_systemd_rlogin_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_rlogin_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_rlogin_off" comment="rlogin service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">rlogin.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_rlogin_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_rlogin_socket_disabled" />
    <linux:state state_ref="state_systemd_rlogin_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_rlogin_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_rlogin_socket_off" comment="rlogin socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">rlogin.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_rlogin" check="all" check_existence="any_exist" comment="Test that the rlogin service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_rlogin"/>
    <linux:state state_ref="state_service_not_running_rlogin"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_rlogin" comment="Retrieve the ActiveState property of rlogin" version="1">
    <linux:unit operation="pattern match">^rlogin\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_rlogin" version="1" comment="rlogin is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_rlogin" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service rlogin is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_rlogin"/>
    <linux:state state_ref="state_service_loadstate_is_masked_rlogin"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_rlogin" comment="Retrieve the LoadState property of rlogin" version="1">
    <linux:unit operation="pattern match">^rlogin\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_rlogin" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_rlogin" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service rlogin is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_rlogin"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_rlogin"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_rlogin" comment="Retrieve the FragmentPath property of rlogin" version="1">
    <linux:unit operation="pattern match">^rlogin\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_rlogin" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_rlogin_package_rsh-server_removed" version="1"
  comment="package rsh-server is removed">
    <linux:object object_ref="obj_test_service_rlogin_package_rsh-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_rlogin_package_rsh-server_removed" version="1">
    <linux:name>rsh-server</linux:name>
  </linux:rpminfo_object>


</def-group>