<def-group>

  

  <definition class="compliance" id="service_netfs_disabled" version="1">
    <metadata>
      <title>Service netfs Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The netfs service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package netfs removed or service netfs is not configured to start" operator="OR">
      <criterion comment="netfs removed" test_ref="test_service_netfs_package_netfs_removed" />
      <criteria operator="AND" comment="service netfs is not configured to start">
        <criterion comment="netfs is not running" test_ref="test_service_not_running_netfs" />
        <criterion comment="Property LoadState of service netfs is masked" test_ref="test_service_loadstate_is_masked_netfs" />
        <criterion comment="Property FragmentPath of service netfs is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_netfs" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_netfs_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_netfs_disabled" />
    <linux:state state_ref="state_systemd_netfs_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_netfs_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_netfs_off" comment="netfs service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">netfs.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_netfs_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_netfs_socket_disabled" />
    <linux:state state_ref="state_systemd_netfs_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_netfs_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_netfs_socket_off" comment="netfs socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">netfs.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_netfs" check="all" check_existence="any_exist" comment="Test that the netfs service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_netfs"/>
    <linux:state state_ref="state_service_not_running_netfs"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_netfs" comment="Retrieve the ActiveState property of netfs" version="1">
    <linux:unit operation="pattern match">^netfs\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_netfs" version="1" comment="netfs is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_netfs" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service netfs is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_netfs"/>
    <linux:state state_ref="state_service_loadstate_is_masked_netfs"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_netfs" comment="Retrieve the LoadState property of netfs" version="1">
    <linux:unit operation="pattern match">^netfs\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_netfs" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_netfs" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service netfs is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_netfs"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_netfs"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_netfs" comment="Retrieve the FragmentPath property of netfs" version="1">
    <linux:unit operation="pattern match">^netfs\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_netfs" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_netfs_package_netfs_removed" version="1"
  comment="package netfs is removed">
    <linux:object object_ref="obj_test_service_netfs_package_netfs_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_netfs_package_netfs_removed" version="1">
    <linux:name>netfs</linux:name>
  </linux:rpminfo_object>


</def-group>