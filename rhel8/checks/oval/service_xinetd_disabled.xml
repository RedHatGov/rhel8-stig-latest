<def-group>

  

  <definition class="compliance" id="service_xinetd_disabled" version="1">
    <metadata>
      <title>Service xinetd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The xinetd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package xinetd removed or service xinetd is not configured to start" operator="OR">
      <criterion comment="xinetd removed" test_ref="test_service_xinetd_package_xinetd_removed" />
      <criteria operator="AND" comment="service xinetd is not configured to start">
        <criterion comment="xinetd is not running" test_ref="test_service_not_running_xinetd" />
        <criterion comment="Property LoadState of service xinetd is masked" test_ref="test_service_loadstate_is_masked_xinetd" />
        <criterion comment="Property FragmentPath of service xinetd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_xinetd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_xinetd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_xinetd_disabled" />
    <linux:state state_ref="state_systemd_xinetd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_xinetd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_xinetd_off" comment="xinetd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">xinetd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_xinetd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_xinetd_socket_disabled" />
    <linux:state state_ref="state_systemd_xinetd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_xinetd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_xinetd_socket_off" comment="xinetd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">xinetd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_xinetd" check="all" check_existence="any_exist" comment="Test that the xinetd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_xinetd"/>
    <linux:state state_ref="state_service_not_running_xinetd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_xinetd" comment="Retrieve the ActiveState property of xinetd" version="1">
    <linux:unit operation="pattern match">^xinetd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_xinetd" version="1" comment="xinetd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_xinetd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service xinetd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_xinetd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_xinetd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_xinetd" comment="Retrieve the LoadState property of xinetd" version="1">
    <linux:unit operation="pattern match">^xinetd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_xinetd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_xinetd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service xinetd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_xinetd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_xinetd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_xinetd" comment="Retrieve the FragmentPath property of xinetd" version="1">
    <linux:unit operation="pattern match">^xinetd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_xinetd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_xinetd_package_xinetd_removed" version="1"
  comment="package xinetd is removed">
    <linux:object object_ref="obj_test_service_xinetd_package_xinetd_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_xinetd_package_xinetd_removed" version="1">
    <linux:name>xinetd</linux:name>
  </linux:rpminfo_object>


</def-group>