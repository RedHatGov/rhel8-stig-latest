<def-group>

  

  <definition class="compliance" id="service_mdmonitor_disabled" version="1">
    <metadata>
      <title>Service mdmonitor Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The mdmonitor service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package mdadm removed or service mdmonitor is not configured to start" operator="OR">
      <criterion comment="mdadm removed" test_ref="test_service_mdmonitor_package_mdadm_removed" />
      <criteria operator="AND" comment="service mdmonitor is not configured to start">
        <criterion comment="mdmonitor is not running" test_ref="test_service_not_running_mdmonitor" />
        <criterion comment="Property LoadState of service mdmonitor is masked" test_ref="test_service_loadstate_is_masked_mdmonitor" />
        <criterion comment="Property FragmentPath of service mdmonitor is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_mdmonitor" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_mdmonitor_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_mdmonitor_disabled" />
    <linux:state state_ref="state_systemd_mdmonitor_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_mdmonitor_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_mdmonitor_off" comment="mdmonitor service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">mdmonitor.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_mdmonitor_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_mdmonitor_socket_disabled" />
    <linux:state state_ref="state_systemd_mdmonitor_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_mdmonitor_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_mdmonitor_socket_off" comment="mdmonitor socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">mdmonitor.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_mdmonitor" check="all" check_existence="any_exist" comment="Test that the mdmonitor service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_mdmonitor"/>
    <linux:state state_ref="state_service_not_running_mdmonitor"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_mdmonitor" comment="Retrieve the ActiveState property of mdmonitor" version="1">
    <linux:unit operation="pattern match">^mdmonitor\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_mdmonitor" version="1" comment="mdmonitor is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_mdmonitor" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service mdmonitor is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_mdmonitor"/>
    <linux:state state_ref="state_service_loadstate_is_masked_mdmonitor"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_mdmonitor" comment="Retrieve the LoadState property of mdmonitor" version="1">
    <linux:unit operation="pattern match">^mdmonitor\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_mdmonitor" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_mdmonitor" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service mdmonitor is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_mdmonitor"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_mdmonitor"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_mdmonitor" comment="Retrieve the FragmentPath property of mdmonitor" version="1">
    <linux:unit operation="pattern match">^mdmonitor\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_mdmonitor" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_mdmonitor_package_mdadm_removed" version="1"
  comment="package mdadm is removed">
    <linux:object object_ref="obj_test_service_mdmonitor_package_mdadm_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_mdmonitor_package_mdadm_removed" version="1">
    <linux:name>mdadm</linux:name>
  </linux:rpminfo_object>


</def-group>