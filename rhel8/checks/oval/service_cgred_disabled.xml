<def-group>

  

  <definition class="compliance" id="service_cgred_disabled" version="1">
    <metadata>
      <title>Service cgred Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The cgred service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package libcgroup-tools removed or service cgred is not configured to start" operator="OR">
      <criterion comment="libcgroup-tools removed" test_ref="test_service_cgred_package_libcgroup-tools_removed" />
      <criteria operator="AND" comment="service cgred is not configured to start">
        <criterion comment="cgred is not running" test_ref="test_service_not_running_cgred" />
        <criterion comment="Property LoadState of service cgred is masked" test_ref="test_service_loadstate_is_masked_cgred" />
        <criterion comment="Property FragmentPath of service cgred is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_cgred" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_cgred_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_cgred_disabled" />
    <linux:state state_ref="state_systemd_cgred_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_cgred_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_cgred_off" comment="cgred service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">cgred.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_cgred_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_cgred_socket_disabled" />
    <linux:state state_ref="state_systemd_cgred_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_cgred_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_cgred_socket_off" comment="cgred socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">cgred.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_cgred" check="all" check_existence="any_exist" comment="Test that the cgred service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_cgred"/>
    <linux:state state_ref="state_service_not_running_cgred"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_cgred" comment="Retrieve the ActiveState property of cgred" version="1">
    <linux:unit operation="pattern match">^cgred\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_cgred" version="1" comment="cgred is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_cgred" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service cgred is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_cgred"/>
    <linux:state state_ref="state_service_loadstate_is_masked_cgred"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_cgred" comment="Retrieve the LoadState property of cgred" version="1">
    <linux:unit operation="pattern match">^cgred\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_cgred" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_cgred" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service cgred is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_cgred"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_cgred"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_cgred" comment="Retrieve the FragmentPath property of cgred" version="1">
    <linux:unit operation="pattern match">^cgred\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_cgred" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_cgred_package_libcgroup-tools_removed" version="1"
  comment="package libcgroup-tools is removed">
    <linux:object object_ref="obj_test_service_cgred_package_libcgroup-tools_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_cgred_package_libcgroup-tools_removed" version="1">
    <linux:name>libcgroup-tools</linux:name>
  </linux:rpminfo_object>


</def-group>