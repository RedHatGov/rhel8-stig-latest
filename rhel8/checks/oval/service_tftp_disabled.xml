<def-group>

  

  <definition class="compliance" id="service_tftp_disabled" version="1">
    <metadata>
      <title>Service tftp Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The tftp service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package tftp-server removed or service tftp is not configured to start" operator="OR">
      <criterion comment="tftp-server removed" test_ref="test_service_tftp_package_tftp-server_removed" />
      <criteria operator="AND" comment="service tftp is not configured to start">
        <criterion comment="tftp is not running" test_ref="test_service_not_running_tftp" />
        <criterion comment="Property LoadState of service tftp is masked" test_ref="test_service_loadstate_is_masked_tftp" />
        <criterion comment="Property FragmentPath of service tftp is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_tftp" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_tftp_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_tftp_disabled" />
    <linux:state state_ref="state_systemd_tftp_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_tftp_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_tftp_off" comment="tftp service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">tftp.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_tftp_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_tftp_socket_disabled" />
    <linux:state state_ref="state_systemd_tftp_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_tftp_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_tftp_socket_off" comment="tftp socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">tftp.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_tftp" check="all" check_existence="any_exist" comment="Test that the tftp service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_tftp"/>
    <linux:state state_ref="state_service_not_running_tftp"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_tftp" comment="Retrieve the ActiveState property of tftp" version="1">
    <linux:unit operation="pattern match">^tftp\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_tftp" version="1" comment="tftp is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_tftp" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service tftp is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_tftp"/>
    <linux:state state_ref="state_service_loadstate_is_masked_tftp"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_tftp" comment="Retrieve the LoadState property of tftp" version="1">
    <linux:unit operation="pattern match">^tftp\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_tftp" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_tftp" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service tftp is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_tftp"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_tftp"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_tftp" comment="Retrieve the FragmentPath property of tftp" version="1">
    <linux:unit operation="pattern match">^tftp\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_tftp" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_tftp_package_tftp-server_removed" version="1"
  comment="package tftp-server is removed">
    <linux:object object_ref="obj_test_service_tftp_package_tftp-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_tftp_package_tftp-server_removed" version="1">
    <linux:name>tftp-server</linux:name>
  </linux:rpminfo_object>


</def-group>