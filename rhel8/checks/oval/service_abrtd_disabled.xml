<def-group>

  

  <definition class="compliance" id="service_abrtd_disabled" version="1">
    <metadata>
      <title>Service abrtd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The abrtd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package abrt removed or service abrtd is not configured to start" operator="OR">
      <criterion comment="abrt removed" test_ref="test_service_abrtd_package_abrt_removed" />
      <criteria operator="AND" comment="service abrtd is not configured to start">
        <criterion comment="abrtd is not running" test_ref="test_service_not_running_abrtd" />
        <criterion comment="Property LoadState of service abrtd is masked" test_ref="test_service_loadstate_is_masked_abrtd" />
        <criterion comment="Property FragmentPath of service abrtd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_abrtd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_abrtd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_abrtd_disabled" />
    <linux:state state_ref="state_systemd_abrtd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_abrtd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_abrtd_off" comment="abrtd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">abrtd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_abrtd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_abrtd_socket_disabled" />
    <linux:state state_ref="state_systemd_abrtd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_abrtd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_abrtd_socket_off" comment="abrtd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">abrtd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_abrtd" check="all" check_existence="any_exist" comment="Test that the abrtd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_abrtd"/>
    <linux:state state_ref="state_service_not_running_abrtd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_abrtd" comment="Retrieve the ActiveState property of abrtd" version="1">
    <linux:unit operation="pattern match">^abrtd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_abrtd" version="1" comment="abrtd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_abrtd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service abrtd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_abrtd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_abrtd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_abrtd" comment="Retrieve the LoadState property of abrtd" version="1">
    <linux:unit operation="pattern match">^abrtd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_abrtd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_abrtd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service abrtd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_abrtd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_abrtd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_abrtd" comment="Retrieve the FragmentPath property of abrtd" version="1">
    <linux:unit operation="pattern match">^abrtd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_abrtd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_abrtd_package_abrt_removed" version="1"
  comment="package abrt is removed">
    <linux:object object_ref="obj_test_service_abrtd_package_abrt_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_abrtd_package_abrt_removed" version="1">
    <linux:name>abrt</linux:name>
  </linux:rpminfo_object>


</def-group>