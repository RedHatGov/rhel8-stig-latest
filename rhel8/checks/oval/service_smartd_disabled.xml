<def-group>

  

  <definition class="compliance" id="service_smartd_disabled" version="1">
    <metadata>
      <title>Service smartd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The smartd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package smartmontools removed or service smartd is not configured to start" operator="OR">
      <criterion comment="smartmontools removed" test_ref="test_service_smartd_package_smartmontools_removed" />
      <criteria operator="AND" comment="service smartd is not configured to start">
        <criterion comment="smartd is not running" test_ref="test_service_not_running_smartd" />
        <criterion comment="Property LoadState of service smartd is masked" test_ref="test_service_loadstate_is_masked_smartd" />
        <criterion comment="Property FragmentPath of service smartd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_smartd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_smartd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_smartd_disabled" />
    <linux:state state_ref="state_systemd_smartd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_smartd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_smartd_off" comment="smartd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">smartd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_smartd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_smartd_socket_disabled" />
    <linux:state state_ref="state_systemd_smartd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_smartd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_smartd_socket_off" comment="smartd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">smartd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_smartd" check="all" check_existence="any_exist" comment="Test that the smartd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_smartd"/>
    <linux:state state_ref="state_service_not_running_smartd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_smartd" comment="Retrieve the ActiveState property of smartd" version="1">
    <linux:unit operation="pattern match">^smartd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_smartd" version="1" comment="smartd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_smartd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service smartd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_smartd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_smartd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_smartd" comment="Retrieve the LoadState property of smartd" version="1">
    <linux:unit operation="pattern match">^smartd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_smartd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_smartd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service smartd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_smartd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_smartd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_smartd" comment="Retrieve the FragmentPath property of smartd" version="1">
    <linux:unit operation="pattern match">^smartd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_smartd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_smartd_package_smartmontools_removed" version="1"
  comment="package smartmontools is removed">
    <linux:object object_ref="obj_test_service_smartd_package_smartmontools_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_smartd_package_smartmontools_removed" version="1">
    <linux:name>smartmontools</linux:name>
  </linux:rpminfo_object>


</def-group>