<def-group>

  

  <definition class="compliance" id="service_named_disabled" version="1">
    <metadata>
      <title>Service named Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The named service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package bind removed or service named is not configured to start" operator="OR">
      <criterion comment="bind removed" test_ref="test_service_named_package_bind_removed" />
      <criteria operator="AND" comment="service named is not configured to start">
        <criterion comment="named is not running" test_ref="test_service_not_running_named" />
        <criterion comment="Property LoadState of service named is masked" test_ref="test_service_loadstate_is_masked_named" />
        <criterion comment="Property FragmentPath of service named is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_named" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_named_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_named_disabled" />
    <linux:state state_ref="state_systemd_named_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_named_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_named_off" comment="named service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">named.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_named_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_named_socket_disabled" />
    <linux:state state_ref="state_systemd_named_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_named_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_named_socket_off" comment="named socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">named.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_named" check="all" check_existence="any_exist" comment="Test that the named service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_named"/>
    <linux:state state_ref="state_service_not_running_named"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_named" comment="Retrieve the ActiveState property of named" version="1">
    <linux:unit operation="pattern match">^named\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_named" version="1" comment="named is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_named" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service named is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_named"/>
    <linux:state state_ref="state_service_loadstate_is_masked_named"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_named" comment="Retrieve the LoadState property of named" version="1">
    <linux:unit operation="pattern match">^named\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_named" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_named" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service named is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_named"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_named"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_named" comment="Retrieve the FragmentPath property of named" version="1">
    <linux:unit operation="pattern match">^named\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_named" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_named_package_bind_removed" version="1"
  comment="package bind is removed">
    <linux:object object_ref="obj_test_service_named_package_bind_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_named_package_bind_removed" version="1">
    <linux:name>bind</linux:name>
  </linux:rpminfo_object>


</def-group>