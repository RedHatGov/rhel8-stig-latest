<def-group>

  

  <definition class="compliance" id="service_rdisc_disabled" version="1">
    <metadata>
      <title>Service rdisc Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The rdisc service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package iputils removed or service rdisc is not configured to start" operator="OR">
      <criterion comment="iputils removed" test_ref="test_service_rdisc_package_iputils_removed" />
      <criteria operator="AND" comment="service rdisc is not configured to start">
        <criterion comment="rdisc is not running" test_ref="test_service_not_running_rdisc" />
        <criterion comment="Property LoadState of service rdisc is masked" test_ref="test_service_loadstate_is_masked_rdisc" />
        <criterion comment="Property FragmentPath of service rdisc is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_rdisc" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_rdisc_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_rdisc_disabled" />
    <linux:state state_ref="state_systemd_rdisc_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_rdisc_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_rdisc_off" comment="rdisc service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">rdisc.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_rdisc_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_rdisc_socket_disabled" />
    <linux:state state_ref="state_systemd_rdisc_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_rdisc_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_rdisc_socket_off" comment="rdisc socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">rdisc.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_rdisc" check="all" check_existence="any_exist" comment="Test that the rdisc service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_rdisc"/>
    <linux:state state_ref="state_service_not_running_rdisc"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_rdisc" comment="Retrieve the ActiveState property of rdisc" version="1">
    <linux:unit operation="pattern match">^rdisc\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_rdisc" version="1" comment="rdisc is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_rdisc" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service rdisc is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_rdisc"/>
    <linux:state state_ref="state_service_loadstate_is_masked_rdisc"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_rdisc" comment="Retrieve the LoadState property of rdisc" version="1">
    <linux:unit operation="pattern match">^rdisc\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_rdisc" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_rdisc" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service rdisc is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_rdisc"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_rdisc"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_rdisc" comment="Retrieve the FragmentPath property of rdisc" version="1">
    <linux:unit operation="pattern match">^rdisc\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_rdisc" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_rdisc_package_iputils_removed" version="1"
  comment="package iputils is removed">
    <linux:object object_ref="obj_test_service_rdisc_package_iputils_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_rdisc_package_iputils_removed" version="1">
    <linux:name>iputils</linux:name>
  </linux:rpminfo_object>


</def-group>