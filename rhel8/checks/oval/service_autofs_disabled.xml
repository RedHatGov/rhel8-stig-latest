<def-group>

  

  <definition class="compliance" id="service_autofs_disabled" version="1">
    <metadata>
      <title>Service autofs Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The autofs service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package autofs removed or service autofs is not configured to start" operator="OR">
      <criterion comment="autofs removed" test_ref="test_service_autofs_package_autofs_removed" />
      <criteria operator="AND" comment="service autofs is not configured to start">
        <criterion comment="autofs is not running" test_ref="test_service_not_running_autofs" />
        <criterion comment="Property LoadState of service autofs is masked" test_ref="test_service_loadstate_is_masked_autofs" />
        <criterion comment="Property FragmentPath of service autofs is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_autofs" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_autofs_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_autofs_disabled" />
    <linux:state state_ref="state_systemd_autofs_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_autofs_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_autofs_off" comment="autofs service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">autofs.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_autofs_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_autofs_socket_disabled" />
    <linux:state state_ref="state_systemd_autofs_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_autofs_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_autofs_socket_off" comment="autofs socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">autofs.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_autofs" check="all" check_existence="any_exist" comment="Test that the autofs service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_autofs"/>
    <linux:state state_ref="state_service_not_running_autofs"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_autofs" comment="Retrieve the ActiveState property of autofs" version="1">
    <linux:unit operation="pattern match">^autofs\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_autofs" version="1" comment="autofs is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_autofs" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service autofs is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_autofs"/>
    <linux:state state_ref="state_service_loadstate_is_masked_autofs"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_autofs" comment="Retrieve the LoadState property of autofs" version="1">
    <linux:unit operation="pattern match">^autofs\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_autofs" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_autofs" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service autofs is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_autofs"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_autofs"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_autofs" comment="Retrieve the FragmentPath property of autofs" version="1">
    <linux:unit operation="pattern match">^autofs\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_autofs" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_autofs_package_autofs_removed" version="1"
  comment="package autofs is removed">
    <linux:object object_ref="obj_test_service_autofs_package_autofs_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_autofs_package_autofs_removed" version="1">
    <linux:name>autofs</linux:name>
  </linux:rpminfo_object>


</def-group>