<def-group>

  

  <definition class="compliance" id="service_snmpd_disabled" version="1">
    <metadata>
      <title>Service snmpd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The snmpd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package net-snmp removed or service snmpd is not configured to start" operator="OR">
      <criterion comment="net-snmp removed" test_ref="test_service_snmpd_package_net-snmp_removed" />
      <criteria operator="AND" comment="service snmpd is not configured to start">
        <criterion comment="snmpd is not running" test_ref="test_service_not_running_snmpd" />
        <criterion comment="Property LoadState of service snmpd is masked" test_ref="test_service_loadstate_is_masked_snmpd" />
        <criterion comment="Property FragmentPath of service snmpd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_snmpd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_snmpd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_snmpd_disabled" />
    <linux:state state_ref="state_systemd_snmpd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_snmpd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_snmpd_off" comment="snmpd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">snmpd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_snmpd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_snmpd_socket_disabled" />
    <linux:state state_ref="state_systemd_snmpd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_snmpd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_snmpd_socket_off" comment="snmpd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">snmpd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_snmpd" check="all" check_existence="any_exist" comment="Test that the snmpd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_snmpd"/>
    <linux:state state_ref="state_service_not_running_snmpd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_snmpd" comment="Retrieve the ActiveState property of snmpd" version="1">
    <linux:unit operation="pattern match">^snmpd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_snmpd" version="1" comment="snmpd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_snmpd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service snmpd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_snmpd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_snmpd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_snmpd" comment="Retrieve the LoadState property of snmpd" version="1">
    <linux:unit operation="pattern match">^snmpd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_snmpd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_snmpd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service snmpd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_snmpd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_snmpd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_snmpd" comment="Retrieve the FragmentPath property of snmpd" version="1">
    <linux:unit operation="pattern match">^snmpd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_snmpd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_snmpd_package_net-snmp_removed" version="1"
  comment="package net-snmp is removed">
    <linux:object object_ref="obj_test_service_snmpd_package_net-snmp_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_snmpd_package_net-snmp_removed" version="1">
    <linux:name>net-snmp</linux:name>
  </linux:rpminfo_object>


</def-group>