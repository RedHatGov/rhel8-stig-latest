<def-group>

  

  <definition class="compliance" id="service_rexec_disabled" version="1">
    <metadata>
      <title>Service rexec Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The rexec service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package rsh-server removed or service rexec is not configured to start" operator="OR">
      <criterion comment="rsh-server removed" test_ref="test_service_rexec_package_rsh-server_removed" />
      <criteria operator="AND" comment="service rexec is not configured to start">
        <criterion comment="rexec is not running" test_ref="test_service_not_running_rexec" />
        <criterion comment="Property LoadState of service rexec is masked" test_ref="test_service_loadstate_is_masked_rexec" />
        <criterion comment="Property FragmentPath of service rexec is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_rexec" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_rexec_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_rexec_disabled" />
    <linux:state state_ref="state_systemd_rexec_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_rexec_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_rexec_off" comment="rexec service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">rexec.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_rexec_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_rexec_socket_disabled" />
    <linux:state state_ref="state_systemd_rexec_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_rexec_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_rexec_socket_off" comment="rexec socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">rexec.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_rexec" check="all" check_existence="any_exist" comment="Test that the rexec service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_rexec"/>
    <linux:state state_ref="state_service_not_running_rexec"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_rexec" comment="Retrieve the ActiveState property of rexec" version="1">
    <linux:unit operation="pattern match">^rexec\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_rexec" version="1" comment="rexec is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_rexec" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service rexec is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_rexec"/>
    <linux:state state_ref="state_service_loadstate_is_masked_rexec"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_rexec" comment="Retrieve the LoadState property of rexec" version="1">
    <linux:unit operation="pattern match">^rexec\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_rexec" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_rexec" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service rexec is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_rexec"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_rexec"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_rexec" comment="Retrieve the FragmentPath property of rexec" version="1">
    <linux:unit operation="pattern match">^rexec\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_rexec" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_rexec_package_rsh-server_removed" version="1"
  comment="package rsh-server is removed">
    <linux:object object_ref="obj_test_service_rexec_package_rsh-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_rexec_package_rsh-server_removed" version="1">
    <linux:name>rsh-server</linux:name>
  </linux:rpminfo_object>


</def-group>