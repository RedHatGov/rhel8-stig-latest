<def-group>

  

  <definition class="compliance" id="service_cpupower_disabled" version="1">
    <metadata>
      <title>Service cpupower Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The cpupower service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package kernel-tools removed or service cpupower is not configured to start" operator="OR">
      <criterion comment="kernel-tools removed" test_ref="test_service_cpupower_package_kernel-tools_removed" />
      <criteria operator="AND" comment="service cpupower is not configured to start">
        <criterion comment="cpupower is not running" test_ref="test_service_not_running_cpupower" />
        <criterion comment="Property LoadState of service cpupower is masked" test_ref="test_service_loadstate_is_masked_cpupower" />
        <criterion comment="Property FragmentPath of service cpupower is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_cpupower" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_cpupower_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_cpupower_disabled" />
    <linux:state state_ref="state_systemd_cpupower_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_cpupower_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_cpupower_off" comment="cpupower service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">cpupower.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_cpupower_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_cpupower_socket_disabled" />
    <linux:state state_ref="state_systemd_cpupower_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_cpupower_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_cpupower_socket_off" comment="cpupower socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">cpupower.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_cpupower" check="all" check_existence="any_exist" comment="Test that the cpupower service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_cpupower"/>
    <linux:state state_ref="state_service_not_running_cpupower"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_cpupower" comment="Retrieve the ActiveState property of cpupower" version="1">
    <linux:unit operation="pattern match">^cpupower\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_cpupower" version="1" comment="cpupower is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_cpupower" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service cpupower is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_cpupower"/>
    <linux:state state_ref="state_service_loadstate_is_masked_cpupower"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_cpupower" comment="Retrieve the LoadState property of cpupower" version="1">
    <linux:unit operation="pattern match">^cpupower\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_cpupower" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_cpupower" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service cpupower is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_cpupower"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_cpupower"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_cpupower" comment="Retrieve the FragmentPath property of cpupower" version="1">
    <linux:unit operation="pattern match">^cpupower\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_cpupower" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_cpupower_package_kernel-tools_removed" version="1"
  comment="package kernel-tools is removed">
    <linux:object object_ref="obj_test_service_cpupower_package_kernel-tools_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_cpupower_package_kernel-tools_removed" version="1">
    <linux:name>kernel-tools</linux:name>
  </linux:rpminfo_object>


</def-group>