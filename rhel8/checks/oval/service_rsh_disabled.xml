<def-group>

  

  <definition class="compliance" id="service_rsh_disabled" version="1">
    <metadata>
      <title>Service rsh Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The rsh service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package rsh removed or service rsh is not configured to start" operator="OR">
      <criterion comment="rsh removed" test_ref="test_service_rsh_package_rsh_removed" />
      <criteria operator="AND" comment="service rsh is not configured to start">
        <criterion comment="rsh is not running" test_ref="test_service_not_running_rsh" />
        <criterion comment="Property LoadState of service rsh is masked" test_ref="test_service_loadstate_is_masked_rsh" />
        <criterion comment="Property FragmentPath of service rsh is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_rsh" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_rsh_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_rsh_disabled" />
    <linux:state state_ref="state_systemd_rsh_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_rsh_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_rsh_off" comment="rsh service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">rsh.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_rsh_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_rsh_socket_disabled" />
    <linux:state state_ref="state_systemd_rsh_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_rsh_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_rsh_socket_off" comment="rsh socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">rsh.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_rsh" check="all" check_existence="any_exist" comment="Test that the rsh service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_rsh"/>
    <linux:state state_ref="state_service_not_running_rsh"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_rsh" comment="Retrieve the ActiveState property of rsh" version="1">
    <linux:unit operation="pattern match">^rsh\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_rsh" version="1" comment="rsh is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_rsh" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service rsh is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_rsh"/>
    <linux:state state_ref="state_service_loadstate_is_masked_rsh"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_rsh" comment="Retrieve the LoadState property of rsh" version="1">
    <linux:unit operation="pattern match">^rsh\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_rsh" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_rsh" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service rsh is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_rsh"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_rsh"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_rsh" comment="Retrieve the FragmentPath property of rsh" version="1">
    <linux:unit operation="pattern match">^rsh\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_rsh" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_rsh_package_rsh_removed" version="1"
  comment="package rsh is removed">
    <linux:object object_ref="obj_test_service_rsh_package_rsh_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_rsh_package_rsh_removed" version="1">
    <linux:name>rsh</linux:name>
  </linux:rpminfo_object>


</def-group>