<def-group>
  <definition class="compliance" id="mount_option_home_nodev" version="1">
    <metadata>
      <title>Add nodev Option to /home</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>/home should be mounted with mount option nodev.</description>
    </metadata>
    <criteria>
      <criterion comment="nodev on /home" test_ref="test_home_partition_nodev" />
    </criteria>
  </definition>

  <linux:partition_test check="all" check_existence="all_exist"
  id="test_home_partition_nodev" version="1" comment="nodev on /home">
    <linux:object object_ref="object_home_partition_nodev" />
    <linux:state state_ref="state_home_partition_nodev" />
  </linux:partition_test>
  <linux:partition_object id="object_home_partition_nodev" version="1">
    <linux:mount_point>/home</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_home_partition_nodev" version="1">
    <linux:mount_options datatype="string" entity_check="at least one" operation="equals">nodev</linux:mount_options>
  </linux:partition_state>
</def-group>