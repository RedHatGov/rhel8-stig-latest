<def-group>
  <definition class="compliance" id="sebool_global_ssp" version="1">
    <metadata>
      <title>SELinux "global_ssp" Boolean Check</title>
      <affected family="unix">
        <platform>multi_platform_rhel</platform>
        <platform>multi_platform_fedora</platform>
        <platform>multi_platform_rhv</platform>
        <platform>multi_platform_ol</platform>
      </affected>
      <description>The SELinux "global_ssp" boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="global_ssp is configured correctly" test_ref="test_sebool_global_ssp" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="global_ssp is configured correctly" id="test_sebool_global_ssp" version="1">
    <linux:object object_ref="object_sebool_global_ssp" />
    <linux:state state_ref="state_sebool_global_ssp" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_global_ssp" version="1">
    <linux:name>global_ssp</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_global_ssp" version="1">
    <linux:name>global_ssp</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_global_ssp"/>
      <linux:pending_status datatype="boolean" var_ref="var_global_ssp"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for global_ssp" datatype="boolean" id="var_global_ssp" version="1" />
  
</def-group>