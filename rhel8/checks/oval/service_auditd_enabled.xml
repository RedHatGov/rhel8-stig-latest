<def-group>

  <definition class="compliance" id="service_auditd_enabled" version="1">
    <metadata>
      <title>Service auditd Enabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The auditd service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package audit installed and service auditd is configured to start" operator="AND">
    <criterion comment="audit installed" test_ref="test_service_auditd_package_audit_installed" />
      <criteria comment="service auditd is configured to start and is running" operator="AND">
        <criterion comment="auditd is running" test_ref="test_service_running_auditd" />
        <criteria operator="OR" comment="service auditd is configured to start">
          <criterion comment="multi-user.target wants auditd" test_ref="test_multi_user_wants_auditd" />
          <criterion comment="multi-user.target wants auditd socket" test_ref="test_multi_user_wants_auditd_socket" />
        </criteria>
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_multi_user_wants_auditd" version="1">
    <linux:object object_ref="object_multi_user_target_for_auditd_enabled" />
    <linux:state state_ref="state_systemd_auditd_on"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_auditd_enabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_auditd_on" comment="auditd listed at least once in the dependencies" version="1">
    <linux:dependency entity_check="at least one">auditd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_multi_user_wants_auditd_socket" version="1">
    <linux:object object_ref="object_multi_user_target_for_auditd_socket_enabled" />
    <linux:state state_ref="state_systemd_auditd_socket_on"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_auditd_socket_enabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_auditd_socket_on" comment="auditd listed at least once in the dependencies" version="1">
    <linux:dependency entity_check="at least one">auditd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_running_auditd" check="at least one" check_existence="at_least_one_exists" comment="Test that the auditd service is running" version="1">
    <linux:object object_ref="obj_service_running_auditd"/>
    <linux:state state_ref="state_service_running_auditd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_running_auditd" comment="Retrieve the ActiveState property of auditd" version="1">
    <linux:unit operation="pattern match">^auditd\.(socket|service)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_running_auditd" version="1" comment="auditd is running">
      <linux:value>active</linux:value>
  </linux:systemdunitproperty_state>



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_service_auditd_package_audit_installed" version="1"
  comment="package audit is installed">
    <linux:object object_ref="obj_test_service_auditd_package_audit_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_auditd_package_audit_installed" version="1">
    <linux:name>audit</linux:name>
  </linux:rpminfo_object>
  

</def-group>