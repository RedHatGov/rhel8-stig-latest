<def-group>

  

  <definition class="compliance" id="service_cgconfig_disabled" version="1">
    <metadata>
      <title>Service cgconfig Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The cgconfig service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package libcgroup removed or service cgconfig is not configured to start" operator="OR">
      <criterion comment="libcgroup removed" test_ref="test_service_cgconfig_package_libcgroup_removed" />
      <criteria operator="AND" comment="service cgconfig is not configured to start">
        <criterion comment="cgconfig is not running" test_ref="test_service_not_running_cgconfig" />
        <criterion comment="Property LoadState of service cgconfig is masked" test_ref="test_service_loadstate_is_masked_cgconfig" />
        <criterion comment="Property FragmentPath of service cgconfig is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_cgconfig" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_cgconfig_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_cgconfig_disabled" />
    <linux:state state_ref="state_systemd_cgconfig_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_cgconfig_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_cgconfig_off" comment="cgconfig service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">cgconfig.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_cgconfig_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_cgconfig_socket_disabled" />
    <linux:state state_ref="state_systemd_cgconfig_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_cgconfig_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_cgconfig_socket_off" comment="cgconfig socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">cgconfig.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_cgconfig" check="all" check_existence="any_exist" comment="Test that the cgconfig service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_cgconfig"/>
    <linux:state state_ref="state_service_not_running_cgconfig"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_cgconfig" comment="Retrieve the ActiveState property of cgconfig" version="1">
    <linux:unit operation="pattern match">^cgconfig\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_cgconfig" version="1" comment="cgconfig is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_cgconfig" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service cgconfig is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_cgconfig"/>
    <linux:state state_ref="state_service_loadstate_is_masked_cgconfig"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_cgconfig" comment="Retrieve the LoadState property of cgconfig" version="1">
    <linux:unit operation="pattern match">^cgconfig\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_cgconfig" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_cgconfig" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service cgconfig is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_cgconfig"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_cgconfig"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_cgconfig" comment="Retrieve the FragmentPath property of cgconfig" version="1">
    <linux:unit operation="pattern match">^cgconfig\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_cgconfig" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_cgconfig_package_libcgroup_removed" version="1"
  comment="package libcgroup is removed">
    <linux:object object_ref="obj_test_service_cgconfig_package_libcgroup_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_cgconfig_package_libcgroup_removed" version="1">
    <linux:name>libcgroup</linux:name>
  </linux:rpminfo_object>


</def-group>