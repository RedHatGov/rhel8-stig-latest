<def-group>
  <definition class="compliance" id="mount_option_dev_shm_nosuid" version="1">
    <metadata>
      <title>Add nosuid Option to /dev/shm</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>/dev/shm should be mounted with mount option nosuid.</description>
    </metadata>
    <criteria>
      <criterion comment="nosuid on /dev/shm" test_ref="test_dev_shm_partition_nosuid" />
    </criteria>
  </definition>

  <linux:partition_test check="all" check_existence="all_exist"
  id="test_dev_shm_partition_nosuid" version="1" comment="nosuid on /dev/shm">
    <linux:object object_ref="object_dev_shm_partition_nosuid" />
    <linux:state state_ref="state_dev_shm_partition_nosuid" />
  </linux:partition_test>
  <linux:partition_object id="object_dev_shm_partition_nosuid" version="1">
    <linux:mount_point>/dev/shm</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_dev_shm_partition_nosuid" version="1">
    <linux:mount_options datatype="string" entity_check="at least one" operation="equals">nosuid</linux:mount_options>
  </linux:partition_state>
</def-group>