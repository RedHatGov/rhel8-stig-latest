<def-group>

  

  <definition class="compliance" id="service_dhcpd_disabled" version="1">
    <metadata>
      <title>Service dhcpd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The dhcpd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package dhcp removed or service dhcpd is not configured to start" operator="OR">
      <criterion comment="dhcp removed" test_ref="test_service_dhcpd_package_dhcp_removed" />
      <criteria operator="AND" comment="service dhcpd is not configured to start">
        <criterion comment="dhcpd is not running" test_ref="test_service_not_running_dhcpd" />
        <criterion comment="Property LoadState of service dhcpd is masked" test_ref="test_service_loadstate_is_masked_dhcpd" />
        <criterion comment="Property FragmentPath of service dhcpd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_dhcpd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_dhcpd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_dhcpd_disabled" />
    <linux:state state_ref="state_systemd_dhcpd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_dhcpd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_dhcpd_off" comment="dhcpd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">dhcpd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_dhcpd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_dhcpd_socket_disabled" />
    <linux:state state_ref="state_systemd_dhcpd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_dhcpd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_dhcpd_socket_off" comment="dhcpd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">dhcpd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_dhcpd" check="all" check_existence="any_exist" comment="Test that the dhcpd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_dhcpd"/>
    <linux:state state_ref="state_service_not_running_dhcpd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_dhcpd" comment="Retrieve the ActiveState property of dhcpd" version="1">
    <linux:unit operation="pattern match">^dhcpd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_dhcpd" version="1" comment="dhcpd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_dhcpd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service dhcpd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_dhcpd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_dhcpd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_dhcpd" comment="Retrieve the LoadState property of dhcpd" version="1">
    <linux:unit operation="pattern match">^dhcpd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_dhcpd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_dhcpd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service dhcpd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_dhcpd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_dhcpd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_dhcpd" comment="Retrieve the FragmentPath property of dhcpd" version="1">
    <linux:unit operation="pattern match">^dhcpd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_dhcpd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_dhcpd_package_dhcp_removed" version="1"
  comment="package dhcp is removed">
    <linux:object object_ref="obj_test_service_dhcpd_package_dhcp_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_dhcpd_package_dhcp_removed" version="1">
    <linux:name>dhcp</linux:name>
  </linux:rpminfo_object>


</def-group>