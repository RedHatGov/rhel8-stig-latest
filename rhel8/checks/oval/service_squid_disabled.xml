<def-group>

  

  <definition class="compliance" id="service_squid_disabled" version="1">
    <metadata>
      <title>Service squid Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The squid service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package squid removed or service squid is not configured to start" operator="OR">
      <criterion comment="squid removed" test_ref="test_service_squid_package_squid_removed" />
      <criteria operator="AND" comment="service squid is not configured to start">
        <criterion comment="squid is not running" test_ref="test_service_not_running_squid" />
        <criterion comment="Property LoadState of service squid is masked" test_ref="test_service_loadstate_is_masked_squid" />
        <criterion comment="Property FragmentPath of service squid is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_squid" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_squid_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_squid_disabled" />
    <linux:state state_ref="state_systemd_squid_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_squid_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_squid_off" comment="squid service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">squid.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_squid_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_squid_socket_disabled" />
    <linux:state state_ref="state_systemd_squid_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_squid_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_squid_socket_off" comment="squid socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">squid.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_squid" check="all" check_existence="any_exist" comment="Test that the squid service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_squid"/>
    <linux:state state_ref="state_service_not_running_squid"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_squid" comment="Retrieve the ActiveState property of squid" version="1">
    <linux:unit operation="pattern match">^squid\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_squid" version="1" comment="squid is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_squid" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service squid is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_squid"/>
    <linux:state state_ref="state_service_loadstate_is_masked_squid"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_squid" comment="Retrieve the LoadState property of squid" version="1">
    <linux:unit operation="pattern match">^squid\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_squid" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_squid" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service squid is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_squid"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_squid"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_squid" comment="Retrieve the FragmentPath property of squid" version="1">
    <linux:unit operation="pattern match">^squid\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_squid" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_squid_package_squid_removed" version="1"
  comment="package squid is removed">
    <linux:object object_ref="obj_test_service_squid_package_squid_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_squid_package_squid_removed" version="1">
    <linux:name>squid</linux:name>
  </linux:rpminfo_object>


</def-group>