<def-group>

  

  <definition class="compliance" id="service_cups_disabled" version="1">
    <metadata>
      <title>Service cups Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The cups service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package cups removed or service cups is not configured to start" operator="OR">
      <criterion comment="cups removed" test_ref="test_service_cups_package_cups_removed" />
      <criteria operator="AND" comment="service cups is not configured to start">
        <criterion comment="cups is not running" test_ref="test_service_not_running_cups" />
        <criterion comment="Property LoadState of service cups is masked" test_ref="test_service_loadstate_is_masked_cups" />
        <criterion comment="Property FragmentPath of service cups is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_cups" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_cups_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_cups_disabled" />
    <linux:state state_ref="state_systemd_cups_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_cups_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_cups_off" comment="cups service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">cups.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_cups_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_cups_socket_disabled" />
    <linux:state state_ref="state_systemd_cups_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_cups_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_cups_socket_off" comment="cups socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">cups.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_cups" check="all" check_existence="any_exist" comment="Test that the cups service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_cups"/>
    <linux:state state_ref="state_service_not_running_cups"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_cups" comment="Retrieve the ActiveState property of cups" version="1">
    <linux:unit operation="pattern match">^cups\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_cups" version="1" comment="cups is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_cups" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service cups is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_cups"/>
    <linux:state state_ref="state_service_loadstate_is_masked_cups"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_cups" comment="Retrieve the LoadState property of cups" version="1">
    <linux:unit operation="pattern match">^cups\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_cups" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_cups" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service cups is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_cups"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_cups"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_cups" comment="Retrieve the FragmentPath property of cups" version="1">
    <linux:unit operation="pattern match">^cups\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_cups" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_cups_package_cups_removed" version="1"
  comment="package cups is removed">
    <linux:object object_ref="obj_test_service_cups_package_cups_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_cups_package_cups_removed" version="1">
    <linux:name>cups</linux:name>
  </linux:rpminfo_object>


</def-group>