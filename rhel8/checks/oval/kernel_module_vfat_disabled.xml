<def-group>
  <definition class="compliance"
  id="kernel_module_vfat_disabled" version="1">
    <metadata>
      <title>Disable vfat Kernel Module</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The kernel module vfat should be disabled.</description>
    </metadata>
    <criteria operator="OR">
      <criterion test_ref="test_kernmod_vfat_disabled" comment="kernel module vfat disabled in /etc/modprobe.d" />
      <criterion test_ref="test_kernmod_vfat_modprobeconf" comment="kernel module vfat disabled in /etc/modprobe.conf" />



      <criterion test_ref="test_kernmod_vfat_etcmodules-load" comment="kernel module vfat disabled in /etc/modules-load.d" />
      <criterion test_ref="test_kernmod_vfat_runmodules-load" comment="kernel module vfat disabled in /run/modules-load.d" />
      <criterion test_ref="test_kernmod_vfat_libmodules-load" comment="kernel module vfat disabled in /usr/lib/modules-load.d" />
      <criterion test_ref="test_kernmod_vfat_runmodprobed" comment="kernel module vfat disabled in /run/modprobe.d" />
      <criterion test_ref="test_kernmod_vfat_libmodprobed" comment="kernel module vfat disabled in /usr/lib/modprobe.d" />



    </criteria>
  </definition>

  <ind:textfilecontent54_test id="test_kernmod_vfat_disabled" version="1" check="all"
  comment="kernel module vfat disabled">
    <ind:object object_ref="obj_kernmod_vfat_disabled" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_test id="test_kernmod_vfat_modprobeconf" version="1" check="all"
  comment="kernel module vfat disabled in /etc/modprobe.conf">
