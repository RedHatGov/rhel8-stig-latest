<def-group>

  

  <definition class="compliance" id="service_smb_disabled" version="1">
    <metadata>
      <title>Service smb Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The smb service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package samba removed or service smb is not configured to start" operator="OR">
      <criterion comment="samba removed" test_ref="test_service_smb_package_samba_removed" />
      <criteria operator="AND" comment="service smb is not configured to start">
        <criterion comment="smb is not running" test_ref="test_service_not_running_smb" />
        <criterion comment="Property LoadState of service smb is masked" test_ref="test_service_loadstate_is_masked_smb" />
        <criterion comment="Property FragmentPath of service smb is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_smb" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_smb_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_smb_disabled" />
    <linux:state state_ref="state_systemd_smb_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_smb_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_smb_off" comment="smb service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">smb.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_smb_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_smb_socket_disabled" />
    <linux:state state_ref="state_systemd_smb_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_smb_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_smb_socket_off" comment="smb socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">smb.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_smb" check="all" check_existence="any_exist" comment="Test that the smb service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_smb"/>
    <linux:state state_ref="state_service_not_running_smb"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_smb" comment="Retrieve the ActiveState property of smb" version="1">
    <linux:unit operation="pattern match">^smb\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_smb" version="1" comment="smb is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_smb" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service smb is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_smb"/>
    <linux:state state_ref="state_service_loadstate_is_masked_smb"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_smb" comment="Retrieve the LoadState property of smb" version="1">
    <linux:unit operation="pattern match">^smb\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_smb" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_smb" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service smb is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_smb"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_smb"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_smb" comment="Retrieve the FragmentPath property of smb" version="1">
    <linux:unit operation="pattern match">^smb\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_smb" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_smb_package_samba_removed" version="1"
  comment="package samba is removed">
    <linux:object object_ref="obj_test_service_smb_package_samba_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_smb_package_samba_removed" version="1">
    <linux:name>samba</linux:name>
  </linux:rpminfo_object>


</def-group>