<def-group>

  

  <definition class="compliance" id="service_messagebus_disabled" version="1">
    <metadata>
      <title>Service messagebus Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The messagebus service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package dbus removed or service messagebus is not configured to start" operator="OR">
      <criterion comment="dbus removed" test_ref="test_service_messagebus_package_dbus_removed" />
      <criteria operator="AND" comment="service messagebus is not configured to start">
        <criterion comment="messagebus is not running" test_ref="test_service_not_running_messagebus" />
        <criterion comment="Property LoadState of service messagebus is masked" test_ref="test_service_loadstate_is_masked_messagebus" />
        <criterion comment="Property FragmentPath of service messagebus is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_messagebus" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_messagebus_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_messagebus_disabled" />
    <linux:state state_ref="state_systemd_messagebus_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_messagebus_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_messagebus_off" comment="messagebus service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">messagebus.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_messagebus_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_messagebus_socket_disabled" />
    <linux:state state_ref="state_systemd_messagebus_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_messagebus_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_messagebus_socket_off" comment="messagebus socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">messagebus.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_messagebus" check="all" check_existence="any_exist" comment="Test that the messagebus service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_messagebus"/>
    <linux:state state_ref="state_service_not_running_messagebus"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_messagebus" comment="Retrieve the ActiveState property of messagebus" version="1">
    <linux:unit operation="pattern match">^messagebus\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_messagebus" version="1" comment="messagebus is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_messagebus" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service messagebus is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_messagebus"/>
    <linux:state state_ref="state_service_loadstate_is_masked_messagebus"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_messagebus" comment="Retrieve the LoadState property of messagebus" version="1">
    <linux:unit operation="pattern match">^messagebus\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_messagebus" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_messagebus" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service messagebus is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_messagebus"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_messagebus"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_messagebus" comment="Retrieve the FragmentPath property of messagebus" version="1">
    <linux:unit operation="pattern match">^messagebus\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_messagebus" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_messagebus_package_dbus_removed" version="1"
  comment="package dbus is removed">
    <linux:object object_ref="obj_test_service_messagebus_package_dbus_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_messagebus_package_dbus_removed" version="1">
    <linux:name>dbus</linux:name>
  </linux:rpminfo_object>


</def-group>