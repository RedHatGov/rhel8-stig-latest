<def-group>

  

  <definition class="compliance" id="service_vsftpd_disabled" version="1">
    <metadata>
      <title>Service vsftpd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The vsftpd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package vsftpd removed or service vsftpd is not configured to start" operator="OR">
      <criterion comment="vsftpd removed" test_ref="test_service_vsftpd_package_vsftpd_removed" />
      <criteria operator="AND" comment="service vsftpd is not configured to start">
        <criterion comment="vsftpd is not running" test_ref="test_service_not_running_vsftpd" />
        <criterion comment="Property LoadState of service vsftpd is masked" test_ref="test_service_loadstate_is_masked_vsftpd" />
        <criterion comment="Property FragmentPath of service vsftpd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_vsftpd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_vsftpd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_vsftpd_disabled" />
    <linux:state state_ref="state_systemd_vsftpd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_vsftpd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_vsftpd_off" comment="vsftpd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">vsftpd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_vsftpd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_vsftpd_socket_disabled" />
    <linux:state state_ref="state_systemd_vsftpd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_vsftpd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_vsftpd_socket_off" comment="vsftpd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">vsftpd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_vsftpd" check="all" check_existence="any_exist" comment="Test that the vsftpd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_vsftpd"/>
    <linux:state state_ref="state_service_not_running_vsftpd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_vsftpd" comment="Retrieve the ActiveState property of vsftpd" version="1">
    <linux:unit operation="pattern match">^vsftpd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_vsftpd" version="1" comment="vsftpd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_vsftpd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service vsftpd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_vsftpd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_vsftpd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_vsftpd" comment="Retrieve the LoadState property of vsftpd" version="1">
    <linux:unit operation="pattern match">^vsftpd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_vsftpd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_vsftpd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service vsftpd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_vsftpd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_vsftpd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_vsftpd" comment="Retrieve the FragmentPath property of vsftpd" version="1">
    <linux:unit operation="pattern match">^vsftpd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_vsftpd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_vsftpd_package_vsftpd_removed" version="1"
  comment="package vsftpd is removed">
    <linux:object object_ref="obj_test_service_vsftpd_package_vsftpd_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_vsftpd_package_vsftpd_removed" version="1">
    <linux:name>vsftpd</linux:name>
  </linux:rpminfo_object>


</def-group>