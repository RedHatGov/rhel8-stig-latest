<def-group>

  

  <definition class="compliance" id="service_nfslock_disabled" version="1">
    <metadata>
      <title>Service nfslock Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The nfslock service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package nfs-utils removed or service nfslock is not configured to start" operator="OR">
      <criterion comment="nfs-utils removed" test_ref="test_service_nfslock_package_nfs-utils_removed" />
      <criteria operator="AND" comment="service nfslock is not configured to start">
        <criterion comment="nfslock is not running" test_ref="test_service_not_running_nfslock" />
        <criterion comment="Property LoadState of service nfslock is masked" test_ref="test_service_loadstate_is_masked_nfslock" />
        <criterion comment="Property FragmentPath of service nfslock is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_nfslock" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_nfslock_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_nfslock_disabled" />
    <linux:state state_ref="state_systemd_nfslock_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_nfslock_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_nfslock_off" comment="nfslock service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">nfslock.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_nfslock_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_nfslock_socket_disabled" />
    <linux:state state_ref="state_systemd_nfslock_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_nfslock_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_nfslock_socket_off" comment="nfslock socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">nfslock.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_nfslock" check="all" check_existence="any_exist" comment="Test that the nfslock service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_nfslock"/>
    <linux:state state_ref="state_service_not_running_nfslock"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_nfslock" comment="Retrieve the ActiveState property of nfslock" version="1">
    <linux:unit operation="pattern match">^nfslock\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_nfslock" version="1" comment="nfslock is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_nfslock" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service nfslock is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_nfslock"/>
    <linux:state state_ref="state_service_loadstate_is_masked_nfslock"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_nfslock" comment="Retrieve the LoadState property of nfslock" version="1">
    <linux:unit operation="pattern match">^nfslock\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_nfslock" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_nfslock" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service nfslock is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_nfslock"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_nfslock"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_nfslock" comment="Retrieve the FragmentPath property of nfslock" version="1">
    <linux:unit operation="pattern match">^nfslock\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_nfslock" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_nfslock_package_nfs-utils_removed" version="1"
  comment="package nfs-utils is removed">
    <linux:object object_ref="obj_test_service_nfslock_package_nfs-utils_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_nfslock_package_nfs-utils_removed" version="1">
    <linux:name>nfs-utils</linux:name>
  </linux:rpminfo_object>


</def-group>