<def-group>

  

  <definition class="compliance" id="service_saslauthd_disabled" version="1">
    <metadata>
      <title>Service saslauthd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The saslauthd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package cyrus-sasl removed or service saslauthd is not configured to start" operator="OR">
      <criterion comment="cyrus-sasl removed" test_ref="test_service_saslauthd_package_cyrus-sasl_removed" />
      <criteria operator="AND" comment="service saslauthd is not configured to start">
        <criterion comment="saslauthd is not running" test_ref="test_service_not_running_saslauthd" />
        <criterion comment="Property LoadState of service saslauthd is masked" test_ref="test_service_loadstate_is_masked_saslauthd" />
        <criterion comment="Property FragmentPath of service saslauthd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_saslauthd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_saslauthd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_saslauthd_disabled" />
    <linux:state state_ref="state_systemd_saslauthd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_saslauthd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_saslauthd_off" comment="saslauthd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">saslauthd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_saslauthd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_saslauthd_socket_disabled" />
    <linux:state state_ref="state_systemd_saslauthd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_saslauthd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_saslauthd_socket_off" comment="saslauthd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">saslauthd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_saslauthd" check="all" check_existence="any_exist" comment="Test that the saslauthd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_saslauthd"/>
    <linux:state state_ref="state_service_not_running_saslauthd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_saslauthd" comment="Retrieve the ActiveState property of saslauthd" version="1">
    <linux:unit operation="pattern match">^saslauthd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_saslauthd" version="1" comment="saslauthd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_saslauthd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service saslauthd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_saslauthd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_saslauthd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_saslauthd" comment="Retrieve the LoadState property of saslauthd" version="1">
    <linux:unit operation="pattern match">^saslauthd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_saslauthd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_saslauthd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service saslauthd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_saslauthd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_saslauthd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_saslauthd" comment="Retrieve the FragmentPath property of saslauthd" version="1">
    <linux:unit operation="pattern match">^saslauthd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_saslauthd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_saslauthd_package_cyrus-sasl_removed" version="1"
  comment="package cyrus-sasl is removed">
    <linux:object object_ref="obj_test_service_saslauthd_package_cyrus-sasl_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_saslauthd_package_cyrus-sasl_removed" version="1">
    <linux:name>cyrus-sasl</linux:name>
  </linux:rpminfo_object>


</def-group>