<def-group>

  

  <definition class="compliance" id="service_portreserve_disabled" version="1">
    <metadata>
      <title>Service portreserve Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The portreserve service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package portreserve removed or service portreserve is not configured to start" operator="OR">
      <criterion comment="portreserve removed" test_ref="test_service_portreserve_package_portreserve_removed" />
      <criteria operator="AND" comment="service portreserve is not configured to start">
        <criterion comment="portreserve is not running" test_ref="test_service_not_running_portreserve" />
        <criterion comment="Property LoadState of service portreserve is masked" test_ref="test_service_loadstate_is_masked_portreserve" />
        <criterion comment="Property FragmentPath of service portreserve is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_portreserve" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_portreserve_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_portreserve_disabled" />
    <linux:state state_ref="state_systemd_portreserve_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_portreserve_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_portreserve_off" comment="portreserve service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">portreserve.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_portreserve_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_portreserve_socket_disabled" />
    <linux:state state_ref="state_systemd_portreserve_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_portreserve_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_portreserve_socket_off" comment="portreserve socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">portreserve.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_portreserve" check="all" check_existence="any_exist" comment="Test that the portreserve service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_portreserve"/>
    <linux:state state_ref="state_service_not_running_portreserve"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_portreserve" comment="Retrieve the ActiveState property of portreserve" version="1">
    <linux:unit operation="pattern match">^portreserve\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_portreserve" version="1" comment="portreserve is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_portreserve" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service portreserve is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_portreserve"/>
    <linux:state state_ref="state_service_loadstate_is_masked_portreserve"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_portreserve" comment="Retrieve the LoadState property of portreserve" version="1">
    <linux:unit operation="pattern match">^portreserve\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_portreserve" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_portreserve" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service portreserve is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_portreserve"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_portreserve"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_portreserve" comment="Retrieve the FragmentPath property of portreserve" version="1">
    <linux:unit operation="pattern match">^portreserve\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_portreserve" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_portreserve_package_portreserve_removed" version="1"
  comment="package portreserve is removed">
    <linux:object object_ref="obj_test_service_portreserve_package_portreserve_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_portreserve_package_portreserve_removed" version="1">
    <linux:name>portreserve</linux:name>
  </linux:rpminfo_object>


</def-group>