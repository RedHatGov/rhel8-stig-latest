<def-group>

  

  <definition class="compliance" id="service_atd_disabled" version="1">
    <metadata>
      <title>Service atd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The atd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package at removed or service atd is not configured to start" operator="OR">
      <criterion comment="at removed" test_ref="test_service_atd_package_at_removed" />
      <criteria operator="AND" comment="service atd is not configured to start">
        <criterion comment="atd is not running" test_ref="test_service_not_running_atd" />
        <criterion comment="Property LoadState of service atd is masked" test_ref="test_service_loadstate_is_masked_atd" />
        <criterion comment="Property FragmentPath of service atd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_atd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_atd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_atd_disabled" />
    <linux:state state_ref="state_systemd_atd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_atd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_atd_off" comment="atd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">atd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_atd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_atd_socket_disabled" />
    <linux:state state_ref="state_systemd_atd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_atd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_atd_socket_off" comment="atd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">atd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_atd" check="all" check_existence="any_exist" comment="Test that the atd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_atd"/>
    <linux:state state_ref="state_service_not_running_atd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_atd" comment="Retrieve the ActiveState property of atd" version="1">
    <linux:unit operation="pattern match">^atd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_atd" version="1" comment="atd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_atd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service atd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_atd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_atd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_atd" comment="Retrieve the LoadState property of atd" version="1">
    <linux:unit operation="pattern match">^atd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_atd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_atd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service atd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_atd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_atd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_atd" comment="Retrieve the FragmentPath property of atd" version="1">
    <linux:unit operation="pattern match">^atd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_atd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_atd_package_at_removed" version="1"
  comment="package at is removed">
    <linux:object object_ref="obj_test_service_atd_package_at_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_atd_package_at_removed" version="1">
    <linux:name>at</linux:name>
  </linux:rpminfo_object>


</def-group>