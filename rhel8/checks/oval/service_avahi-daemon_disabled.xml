<def-group>

  

  <definition class="compliance" id="service_avahi-daemon_disabled" version="1">
    <metadata>
      <title>Service avahi-daemon Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The avahi-daemon service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package avahi removed or service avahi-daemon is not configured to start" operator="OR">
      <criterion comment="avahi removed" test_ref="test_service_avahi-daemon_package_avahi_removed" />
      <criteria operator="AND" comment="service avahi-daemon is not configured to start">
        <criterion comment="avahi-daemon is not running" test_ref="test_service_not_running_avahi-daemon" />
        <criterion comment="Property LoadState of service avahi-daemon is masked" test_ref="test_service_loadstate_is_masked_avahi-daemon" />
        <criterion comment="Property FragmentPath of service avahi-daemon is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_avahi-daemon" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_avahi-daemon_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_avahi-daemon_disabled" />
    <linux:state state_ref="state_systemd_avahi-daemon_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_avahi-daemon_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_avahi-daemon_off" comment="avahi-daemon service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">avahi-daemon.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_avahi-daemon_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_avahi-daemon_socket_disabled" />
    <linux:state state_ref="state_systemd_avahi-daemon_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_avahi-daemon_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_avahi-daemon_socket_off" comment="avahi-daemon socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">avahi-daemon.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_avahi-daemon" check="all" check_existence="any_exist" comment="Test that the avahi-daemon service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_avahi-daemon"/>
    <linux:state state_ref="state_service_not_running_avahi-daemon"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_avahi-daemon" comment="Retrieve the ActiveState property of avahi-daemon" version="1">
    <linux:unit operation="pattern match">^avahi-daemon\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_avahi-daemon" version="1" comment="avahi-daemon is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_avahi-daemon" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service avahi-daemon is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_avahi-daemon"/>
    <linux:state state_ref="state_service_loadstate_is_masked_avahi-daemon"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_avahi-daemon" comment="Retrieve the LoadState property of avahi-daemon" version="1">
    <linux:unit operation="pattern match">^avahi-daemon\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_avahi-daemon" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_avahi-daemon" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service avahi-daemon is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_avahi-daemon"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_avahi-daemon"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_avahi-daemon" comment="Retrieve the FragmentPath property of avahi-daemon" version="1">
    <linux:unit operation="pattern match">^avahi-daemon\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_avahi-daemon" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_avahi-daemon_package_avahi_removed" version="1"
  comment="package avahi is removed">
    <linux:object object_ref="obj_test_service_avahi-daemon_package_avahi_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_avahi-daemon_package_avahi_removed" version="1">
    <linux:name>avahi</linux:name>
  </linux:rpminfo_object>


</def-group>