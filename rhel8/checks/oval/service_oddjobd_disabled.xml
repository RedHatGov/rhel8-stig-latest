<def-group>

  

  <definition class="compliance" id="service_oddjobd_disabled" version="1">
    <metadata>
      <title>Service oddjobd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The oddjobd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package oddjob removed or service oddjobd is not configured to start" operator="OR">
      <criterion comment="oddjob removed" test_ref="test_service_oddjobd_package_oddjob_removed" />
      <criteria operator="AND" comment="service oddjobd is not configured to start">
        <criterion comment="oddjobd is not running" test_ref="test_service_not_running_oddjobd" />
        <criterion comment="Property LoadState of service oddjobd is masked" test_ref="test_service_loadstate_is_masked_oddjobd" />
        <criterion comment="Property FragmentPath of service oddjobd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_oddjobd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_oddjobd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_oddjobd_disabled" />
    <linux:state state_ref="state_systemd_oddjobd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_oddjobd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_oddjobd_off" comment="oddjobd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">oddjobd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_oddjobd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_oddjobd_socket_disabled" />
    <linux:state state_ref="state_systemd_oddjobd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_oddjobd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_oddjobd_socket_off" comment="oddjobd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">oddjobd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_oddjobd" check="all" check_existence="any_exist" comment="Test that the oddjobd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_oddjobd"/>
    <linux:state state_ref="state_service_not_running_oddjobd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_oddjobd" comment="Retrieve the ActiveState property of oddjobd" version="1">
    <linux:unit operation="pattern match">^oddjobd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_oddjobd" version="1" comment="oddjobd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_oddjobd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service oddjobd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_oddjobd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_oddjobd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_oddjobd" comment="Retrieve the LoadState property of oddjobd" version="1">
    <linux:unit operation="pattern match">^oddjobd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_oddjobd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_oddjobd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service oddjobd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_oddjobd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_oddjobd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_oddjobd" comment="Retrieve the FragmentPath property of oddjobd" version="1">
    <linux:unit operation="pattern match">^oddjobd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_oddjobd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_oddjobd_package_oddjob_removed" version="1"
  comment="package oddjob is removed">
    <linux:object object_ref="obj_test_service_oddjobd_package_oddjob_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_oddjobd_package_oddjob_removed" version="1">
    <linux:name>oddjob</linux:name>
  </linux:rpminfo_object>


</def-group>