<def-group>

  

  <definition class="compliance" id="service_rhsmcertd_disabled" version="1">
    <metadata>
      <title>Service rhsmcertd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The rhsmcertd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package subscription-manager removed or service rhsmcertd is not configured to start" operator="OR">
      <criterion comment="subscription-manager removed" test_ref="test_service_rhsmcertd_package_subscription-manager_removed" />
      <criteria operator="AND" comment="service rhsmcertd is not configured to start">
        <criterion comment="rhsmcertd is not running" test_ref="test_service_not_running_rhsmcertd" />
        <criterion comment="Property LoadState of service rhsmcertd is masked" test_ref="test_service_loadstate_is_masked_rhsmcertd" />
        <criterion comment="Property FragmentPath of service rhsmcertd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_rhsmcertd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_rhsmcertd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_rhsmcertd_disabled" />
    <linux:state state_ref="state_systemd_rhsmcertd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_rhsmcertd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_rhsmcertd_off" comment="rhsmcertd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">rhsmcertd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_rhsmcertd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_rhsmcertd_socket_disabled" />
    <linux:state state_ref="state_systemd_rhsmcertd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_rhsmcertd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_rhsmcertd_socket_off" comment="rhsmcertd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">rhsmcertd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_rhsmcertd" check="all" check_existence="any_exist" comment="Test that the rhsmcertd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_rhsmcertd"/>
    <linux:state state_ref="state_service_not_running_rhsmcertd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_rhsmcertd" comment="Retrieve the ActiveState property of rhsmcertd" version="1">
    <linux:unit operation="pattern match">^rhsmcertd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_rhsmcertd" version="1" comment="rhsmcertd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_rhsmcertd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service rhsmcertd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_rhsmcertd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_rhsmcertd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_rhsmcertd" comment="Retrieve the LoadState property of rhsmcertd" version="1">
    <linux:unit operation="pattern match">^rhsmcertd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_rhsmcertd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_rhsmcertd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service rhsmcertd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_rhsmcertd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_rhsmcertd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_rhsmcertd" comment="Retrieve the FragmentPath property of rhsmcertd" version="1">
    <linux:unit operation="pattern match">^rhsmcertd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_rhsmcertd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_rhsmcertd_package_subscription-manager_removed" version="1"
  comment="package subscription-manager is removed">
    <linux:object object_ref="obj_test_service_rhsmcertd_package_subscription-manager_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_rhsmcertd_package_subscription-manager_removed" version="1">
    <linux:name>subscription-manager</linux:name>
  </linux:rpminfo_object>


</def-group>