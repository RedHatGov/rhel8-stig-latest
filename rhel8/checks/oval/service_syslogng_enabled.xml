<def-group>

  <definition class="compliance" id="service_syslogng_enabled" version="1">
    <metadata>
      <title>Service syslogng Enabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The syslogng service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package syslogng installed and service syslogng is configured to start" operator="AND">
    <criterion comment="syslogng installed" test_ref="test_service_syslogng_package_syslogng_installed" />
      <criteria comment="service syslogng is configured to start and is running" operator="AND">
        <criterion comment="syslogng is running" test_ref="test_service_running_syslogng" />
        <criteria operator="OR" comment="service syslogng is configured to start">
          <criterion comment="multi-user.target wants syslogng" test_ref="test_multi_user_wants_syslogng" />
          <criterion comment="multi-user.target wants syslogng socket" test_ref="test_multi_user_wants_syslogng_socket" />
        </criteria>
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_multi_user_wants_syslogng" version="1">
    <linux:object object_ref="object_multi_user_target_for_syslogng_enabled" />
    <linux:state state_ref="state_systemd_syslogng_on"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_syslogng_enabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_syslogng_on" comment="syslogng listed at least once in the dependencies" version="1">
    <linux:dependency entity_check="at least one">syslogng.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_multi_user_wants_syslogng_socket" version="1">
    <linux:object object_ref="object_multi_user_target_for_syslogng_socket_enabled" />
    <linux:state state_ref="state_systemd_syslogng_socket_on"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_syslogng_socket_enabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_syslogng_socket_on" comment="syslogng listed at least once in the dependencies" version="1">
    <linux:dependency entity_check="at least one">syslogng.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_running_syslogng" check="at least one" check_existence="at_least_one_exists" comment="Test that the syslogng service is running" version="1">
    <linux:object object_ref="obj_service_running_syslogng"/>
    <linux:state state_ref="state_service_running_syslogng"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_running_syslogng" comment="Retrieve the ActiveState property of syslogng" version="1">
    <linux:unit operation="pattern match">^syslogng\.(socket|service)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_running_syslogng" version="1" comment="syslogng is running">
      <linux:value>active</linux:value>
  </linux:systemdunitproperty_state>



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_service_syslogng_package_syslogng_installed" version="1"
  comment="package syslogng is installed">
    <linux:object object_ref="obj_test_service_syslogng_package_syslogng_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_syslogng_package_syslogng_installed" version="1">
    <linux:name>syslogng</linux:name>
  </linux:rpminfo_object>
  

</def-group>