<def-group>

  

  <definition class="compliance" id="service_dovecot_disabled" version="1">
    <metadata>
      <title>Service dovecot Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The dovecot service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package dovecot removed or service dovecot is not configured to start" operator="OR">
      <criterion comment="dovecot removed" test_ref="test_service_dovecot_package_dovecot_removed" />
      <criteria operator="AND" comment="service dovecot is not configured to start">
        <criterion comment="dovecot is not running" test_ref="test_service_not_running_dovecot" />
        <criterion comment="Property LoadState of service dovecot is masked" test_ref="test_service_loadstate_is_masked_dovecot" />
        <criterion comment="Property FragmentPath of service dovecot is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_dovecot" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_dovecot_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_dovecot_disabled" />
    <linux:state state_ref="state_systemd_dovecot_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_dovecot_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_dovecot_off" comment="dovecot service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">dovecot.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_dovecot_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_dovecot_socket_disabled" />
    <linux:state state_ref="state_systemd_dovecot_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_dovecot_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_dovecot_socket_off" comment="dovecot socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">dovecot.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_dovecot" check="all" check_existence="any_exist" comment="Test that the dovecot service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_dovecot"/>
    <linux:state state_ref="state_service_not_running_dovecot"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_dovecot" comment="Retrieve the ActiveState property of dovecot" version="1">
    <linux:unit operation="pattern match">^dovecot\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_dovecot" version="1" comment="dovecot is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_dovecot" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service dovecot is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_dovecot"/>
    <linux:state state_ref="state_service_loadstate_is_masked_dovecot"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_dovecot" comment="Retrieve the LoadState property of dovecot" version="1">
    <linux:unit operation="pattern match">^dovecot\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_dovecot" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_dovecot" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service dovecot is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_dovecot"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_dovecot"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_dovecot" comment="Retrieve the FragmentPath property of dovecot" version="1">
    <linux:unit operation="pattern match">^dovecot\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_dovecot" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_dovecot_package_dovecot_removed" version="1"
  comment="package dovecot is removed">
    <linux:object object_ref="obj_test_service_dovecot_package_dovecot_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_dovecot_package_dovecot_removed" version="1">
    <linux:name>dovecot</linux:name>
  </linux:rpminfo_object>


</def-group>