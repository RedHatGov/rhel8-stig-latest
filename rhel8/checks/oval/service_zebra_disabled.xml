<def-group>

  

  <definition class="compliance" id="service_zebra_disabled" version="1">
    <metadata>
      <title>Service zebra Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The zebra service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package quagga removed or service zebra is not configured to start" operator="OR">
      <criterion comment="quagga removed" test_ref="test_service_zebra_package_quagga_removed" />
      <criteria operator="AND" comment="service zebra is not configured to start">
        <criterion comment="zebra is not running" test_ref="test_service_not_running_zebra" />
        <criterion comment="Property LoadState of service zebra is masked" test_ref="test_service_loadstate_is_masked_zebra" />
        <criterion comment="Property FragmentPath of service zebra is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_zebra" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_zebra_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_zebra_disabled" />
    <linux:state state_ref="state_systemd_zebra_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_zebra_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_zebra_off" comment="zebra service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">zebra.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_zebra_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_zebra_socket_disabled" />
    <linux:state state_ref="state_systemd_zebra_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_zebra_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_zebra_socket_off" comment="zebra socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">zebra.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_zebra" check="all" check_existence="any_exist" comment="Test that the zebra service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_zebra"/>
    <linux:state state_ref="state_service_not_running_zebra"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_zebra" comment="Retrieve the ActiveState property of zebra" version="1">
    <linux:unit operation="pattern match">^zebra\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_zebra" version="1" comment="zebra is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_zebra" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service zebra is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_zebra"/>
    <linux:state state_ref="state_service_loadstate_is_masked_zebra"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_zebra" comment="Retrieve the LoadState property of zebra" version="1">
    <linux:unit operation="pattern match">^zebra\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_zebra" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_zebra" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service zebra is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_zebra"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_zebra"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_zebra" comment="Retrieve the FragmentPath property of zebra" version="1">
    <linux:unit operation="pattern match">^zebra\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_zebra" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_zebra_package_quagga_removed" version="1"
  comment="package quagga is removed">
    <linux:object object_ref="obj_test_service_zebra_package_quagga_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_zebra_package_quagga_removed" version="1">
    <linux:name>quagga</linux:name>
  </linux:rpminfo_object>


</def-group>