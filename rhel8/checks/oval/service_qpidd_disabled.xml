<def-group>

  

  <definition class="compliance" id="service_qpidd_disabled" version="1">
    <metadata>
      <title>Service qpidd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The qpidd service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package qpid-cpp-server removed or service qpidd is not configured to start" operator="OR">
      <criterion comment="qpid-cpp-server removed" test_ref="test_service_qpidd_package_qpid-cpp-server_removed" />
      <criteria operator="AND" comment="service qpidd is not configured to start">
        <criterion comment="qpidd is not running" test_ref="test_service_not_running_qpidd" />
        <criterion comment="Property LoadState of service qpidd is masked" test_ref="test_service_loadstate_is_masked_qpidd" />
        <criterion comment="Property FragmentPath of service qpidd is set to /dev/null" test_ref="test_service_fragmentpath_is_dev_null_qpidd" />
      </criteria>
    </criteria>
  </definition>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_qpidd_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_qpidd_disabled" />
    <linux:state state_ref="state_systemd_qpidd_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_qpidd_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_qpidd_off" comment="qpidd service is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">qpidd.service</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitdependency_test check="all" check_existence="any_exist" comment="systemd test" id="test_qpidd_socket_not_wanted_by_multi_user_target" version="1">
    <linux:object object_ref="object_multi_user_target_for_qpidd_socket_disabled" />
    <linux:state state_ref="state_systemd_qpidd_socket_off"/>
  </linux:systemdunitdependency_test>
  <linux:systemdunitdependency_object id="object_multi_user_target_for_qpidd_socket_disabled" comment="list of dependencies of multi-user.target" version="1">
    <linux:unit>multi-user.target</linux:unit>
  </linux:systemdunitdependency_object>
  <linux:systemdunitdependency_state id="state_systemd_qpidd_socket_off" comment="qpidd socket is not listed in the dependencies" version="1">
    <linux:dependency entity_check="none satisfy">qpidd.socket</linux:dependency>
  </linux:systemdunitdependency_state>

  <linux:systemdunitproperty_test id="test_service_not_running_qpidd" check="all" check_existence="any_exist" comment="Test that the qpidd service is not running" version="1">
    <linux:object object_ref="obj_service_not_running_qpidd"/>
    <linux:state state_ref="state_service_not_running_qpidd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_not_running_qpidd" comment="Retrieve the ActiveState property of qpidd" version="1">
    <linux:unit operation="pattern match">^qpidd\.(service|socket)$</linux:unit>
    <linux:property>ActiveState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_not_running_qpidd" version="1" comment="qpidd is not running">
      <linux:value>inactive</linux:value>
  </linux:systemdunitproperty_state>
  <linux:systemdunitproperty_test id="test_service_loadstate_is_masked_qpidd" check="all" check_existence="any_exist" comment="Test that the property LoadState from the service qpidd is masked" version="1">
    <linux:object object_ref="obj_service_loadstate_is_masked_qpidd"/>
    <linux:state state_ref="state_service_loadstate_is_masked_qpidd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_loadstate_is_masked_qpidd" comment="Retrieve the LoadState property of qpidd" version="1">
    <linux:unit operation="pattern match">^qpidd\.(service|socket)$</linux:unit>
    <linux:property>LoadState</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_loadstate_is_masked_qpidd" version="1" comment="LoadState is set to masked">
      <linux:value>masked</linux:value>
  </linux:systemdunitproperty_state>

  <linux:systemdunitproperty_test id="test_service_fragmentpath_is_dev_null_qpidd" check="all" check_existence="any_exist" comment="Test that the property FragmentPath from the service qpidd is set to /dev/null" version="1">
    <linux:object object_ref="obj_service_fragmentpath_is_dev_null_qpidd"/>
    <linux:state state_ref="state_service_fragmentpath_is_dev_null_qpidd"/>
  </linux:systemdunitproperty_test>
  <linux:systemdunitproperty_object id="obj_service_fragmentpath_is_dev_null_qpidd" comment="Retrieve the FragmentPath property of qpidd" version="1">
    <linux:unit operation="pattern match">^qpidd\.(service|socket)$</linux:unit>
    <linux:property>FragmentPath</linux:property>
  </linux:systemdunitproperty_object>
  <linux:systemdunitproperty_state id="state_service_fragmentpath_is_dev_null_qpidd" version="1" comment="FragmentPath is set to /dev/null">
      <linux:value>/dev/null</linux:value>
  </linux:systemdunitproperty_state>





  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_qpidd_package_qpid-cpp-server_removed" version="1"
  comment="package qpid-cpp-server is removed">
    <linux:object object_ref="obj_test_service_qpidd_package_qpid-cpp-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_qpidd_package_qpid-cpp-server_removed" version="1">
    <linux:name>qpid-cpp-server</linux:name>
  </linux:rpminfo_object>


</def-group>