<def-group>
  <definition class="compliance" id="sebool_httpd_verify_dns" version="1">
    <metadata>
      <title>SELinux "httpd_verify_dns" Boolean Check</title>
      <affected family="unix">
        <platform>multi_platform_rhel</platform>
        <platform>multi_platform_fedora</platform>
        <platform>multi_platform_rhv</platform>
        <platform>multi_platform_ol</platform>
      </affected>
      <description>The SELinux "httpd_verify_dns" boolean should be set in the system configuration.</description>
    </metadata>
    <criteria>
      <criterion comment="httpd_verify_dns is configured correctly" test_ref="test_sebool_httpd_verify_dns" />
    </criteria>
  </definition>

  <linux:selinuxboolean_test check="all" check_existence="all_exist" comment="httpd_verify_dns is configured correctly" id="test_sebool_httpd_verify_dns" version="1">
    <linux:object object_ref="object_sebool_httpd_verify_dns" />
    <linux:state state_ref="state_sebool_httpd_verify_dns" />
  </linux:selinuxboolean_test>

  <linux:selinuxboolean_object id="object_sebool_httpd_verify_dns" version="1">
    <linux:name>httpd_verify_dns</linux:name>
  </linux:selinuxboolean_object>

  <linux:selinuxboolean_state id="state_sebool_httpd_verify_dns" version="1">
    <linux:name>httpd_verify_dns</linux:name>
    
      <linux:current_status datatype="boolean" var_ref="var_httpd_verify_dns"/>
      <linux:pending_status datatype="boolean" var_ref="var_httpd_verify_dns"/>
    
  </linux:selinuxboolean_state>

  
    <external_variable comment="external variable for httpd_verify_dns" datatype="boolean" id="var_httpd_verify_dns" version="1" />
  
</def-group>